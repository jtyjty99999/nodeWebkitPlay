<!doctype html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Document</title>
	<link href="css/bootstrap.min.css" rel="stylesheet" media="screen">
	<style>
	.titlebar{
	-webkit-user-select:none;
	-webkit-app-region:drag
	}
	.result{
	border: 3px solid #000;
	border-radius:10px;
	box-shadow:1px 2px 2px #fff;
	height:150px
	}
	.w100{
	width:100px
	}
	body{
	padding:20px;
	padding-top: 50px;
    background-image: url(blueprint.png);
    background-color: #f2f2f2;
    font-family: "Microsoft YaHei"
	}
	</style>
</head>

<script src="js/jquery-1.7.2.min.js"></script>
<script src="js/bootstrap.min.js"></script>
<body>
<div class="container">
	<div class="row-fluid">
	  <div class="span12">
		  <div>
		  <fieldset>
			<legend>加密器</legend>
			<label>选择加密方式
			<select id="secretStyle">
			  <option value="dict">字典排序再散列(加密数据对象与secret用逗号分隔)</option>
			  <option value="md5">md5</option>
			  <option value="sha1">sha1</option>
			</select>
			
			<label>
		<button id="secretGo" class="btn btn-large btn-primary">加密</button>
		  </fieldset>
		</div>
	  </div>
	</div>
</div>
<div class="container">
	<div class="row-fluid">
	
	  <div class="span6">
	  <textarea rows="3" style="width:100%" id="secretSource"></textarea>
	  </div>
	  <div class="span6"></div>
	  <textarea rows="3" style="width:100%" id="secretResult"></textarea>
	</div>
</div>
	
	<script>
	var crypt= require('crypto');
	//md5
	function md5(str) {
		var md5sum = crypto.createHash('md5');
		md5sum.update(str, 'utf8');
		str = md5sum.digest('hex');
		return str;
	}
	//sha1
	function sha1(str) {
		console.log(str)
		var md5sum = crypto.createHash('sha1');
		md5sum.update(str, 'utf8');
		str = md5sum.digest('hex');
		return str;
	}
	function dictAndMd5ize(obj, secret) {
		var array = new Array();

		//字典排序

		for (var key in obj) {
			array.push(key);
		}
		array.sort();

		var paramArray = new Array();

		//拼接字符串

		for (var index in array) {
			var key = array[index];
			paramArray.push(key + obj[key]);
		}

		//sha1化
		var sha1Source = paramArray.join("");
		console.log('sha1Source:' + sha1Source)
		var sign = sha1(sha1Source);
		return sign
	}
	
	$('#secretGo').on('click', function () {
	var type = $('#secretStyle').val(), result;
		var source = $('#secretSource').val();
		console.log(source,type)
		switch (type) {
		case 'md5':
			result = md5(source);
			break
		case 'sha1':
			result = sha1(source);
			break
		case 'dict':
			var obj = JSON.parse(source.split(',')[0]),
			secret = source.split(',')[1];
			result = dictAndMd5ize(obj, secret);
			break
		}
		console.log(result)
		$('#secretResult').val(result);
	})
	</script>
</body>
</html>